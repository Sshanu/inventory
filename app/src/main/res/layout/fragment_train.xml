<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shanu.mode.TrainFragment">

    <Button
        android:id="@+id/testButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"

        android:text="Test" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|bottom"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/selectedImage1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight = ".2"
            android:scaleType="fitXY"
            android:background="#E0E0E0" />
        <ImageView
            android:id="@+id/selectedImage2"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_toRightOf="@id/selectedImage1"
            android:layout_weight = ".2"
            android:scaleType="fitXY"
            android:background="#E0E0E0" />
        <ImageView
            android:id="@+id/selectedImage3"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_toRightOf="@id/selectedImage2"
            android:layout_weight = ".2"
            android:scaleType="fitXY"
            android:background="#E0E0E0" />
        <ImageView
            android:id="@+id/selectedImage4"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_toRightOf="@id/selectedImage3"
            android:layout_weight = ".2"
            android:scaleType="fitXY"
            android:background="#E0E0E0" />
        <ImageView
            android:id="@+id/selectedImage5"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_toRightOf="@id/selectedImage4"
            android:layout_weight = ".2"
            android:scaleType="fitXY"
            android:background="#E0E0E0" />
    </LinearLayout>

</FrameLayout>
