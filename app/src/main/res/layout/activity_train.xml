<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shanu.mode.TrainActivity">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:textSize="50px"
        android:text="Do you want to train your model ?"
        android:paddingTop="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/train_button" />

    <Button
        android:id="@+id/train_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Train"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="26dp" />

    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_alignBottom="@+id/train_button"
        android:layout_marginStart="13dp"
        android:layout_toEndOf="@+id/train_button"
        android:textOn="On"/>
</RelativeLayout>
